{
  "tasks": {
    "start": "deno run --allow-net --allow-read --allow-env app.ts",
    "start:dev": "deno run --allow-net --allow-read --allow-env --watch app.ts"
  },
  "importMap": "import_map.json",
  "fmt": {
    "options": {
      "useTabs": true,
      "lineWidth": 120,
      "indentWidth": 2,
      "singleQuote": false,
      "proseWrap": "preserve"
    }
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "deno.ns"
    ]
  }
}